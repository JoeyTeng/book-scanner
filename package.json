{
  "name": "book-scanner",
  "version": "1.0.0",
  "description": "A static web app for scanning book barcodes and managing book collections",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:local": "tsc && vite build --mode development",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "format": "prettier --write '**/*.{ts,css,html,json,md}' --ignore-path .gitignore",
    "format:check": "prettier --check '**/*.{ts,css,html,json,md}' --ignore-path .gitignore",
    "test": "vitest run",
    "quality": "npm run type-check && npm run lint && npm run format:check",
    "prepare": "husky"
  },
  "dependencies": {
    "dexie": "^4.0.0",
    "fflate": "^0.8.2",
    "html5-qrcode": "^2.3.8",
    "tesseract.js": "^7.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.19.1",
    "vite": "^7.3.0",
    "vitest": "^4.0.16"
  },
  "keywords": [
    "book",
    "scanner",
    "barcode",
    "isbn",
    "library"
  ],
  "author": "JoeyTeng",
  "license": "MIT"
}
